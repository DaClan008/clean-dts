{
    "name": "clean-dts",
    "version": "1.1.0",
    "description": "Clean a single typescript d.ts (declaration | definition) file that was auto generated by tsc.",
    "main": "index.js",
    "bin": {
        "@daclan008/cleandts": "cli/cleandts",
        "cleandts": "cli/cleandts"
    },
    "engines": {
        "node": ">=8.5.0"
    },
    "publishConfig": {
        "access": "public"
    },
    "types": "index.d.ts",
    "scripts": {
        "test": "jest",
        "lint": "eslint src/**/*.ts --fix",
        "clean": "rimraf ./bin",
        "prebuild": "npm run clean && npm test",
        "build": "tsc -p tsconfig.build.json && tsc -p tsconfig.d.json && node tools/declarationFix",
        "postbuild": "node tools/finalizeBuild && npx prettier bin/**/*.* --write && eslint bin/**/*.js --fix",
        "prepack": "npm run build",
        "pack": "node tools/publish",
        "postpack": "npm run clean && npm run git",
        "pregit": "git add -A",
        "git": "git commit -m \"auto git commit\"",
        "postgit": "git push",
        "prebuild:quick": "npm run clean && tsc --inlineSourceMap false && node tools/finalizeBuild",
        "build:quick": "npx prettier bin/**/*.js --write && eslint bin/**/*.js --fix"
    },
    "keywords": [
        "dts",
        "d.ts",
        "clean",
        "definition",
        "declaration",
        "modules",
        "cli",
        "clean-dts",
        "cleandts"
    ],
    "repository": {
        "type": "git",
        "url": "git+https://github.com/DaClan008/clean-dts.git"
    },
    "author": "Jan Lehmkuhl <DaClan008@users.noreply.github.com> (http://somewhere.com/)",
    "license": "Apache-2.0",
    "bugs": {
        "url": "https://github.com/DaClan008/clean-dts/issues"
    },
    "homepage": "https://github.com/DaClan008/clean-dts#readme",
    "jest": {
        "coverageDirectory": "./coverage/",
        "collectCoverage": true,
        "transform": {
            "^.+\\.tsx?$": "ts-jest"
        },
        "coveragePathIgnorePatterns": [
            "./node_modules",
            "./coverage",
            "./.vscode",
            "./__test__",
            "./tools"
        ],
        "coverageThreshold": {
            "global": {
                "branches": 80,
                "functions": 80,
                "lines": 80,
                "statements": -10
            }
        },
        "coverageReporters": [
            "json",
            "lcov",
            "text",
            "clover"
        ],
        "moduleFileExtensions": [
            "ts",
            "tsx",
            "js",
            "jsx"
        ]
    },
    "devDependencies": {
        "@types/jest": "^25.1.2",
        "@types/minimist": "^1.2.0",
        "@types/node": "^13.7.2",
        "@typescript-eslint/eslint-plugin": "^2.20.0",
        "@typescript-eslint/parser": "^2.20.0",
        "codecov": "^3.6.5",
        "coveralls": "^3.0.9",
        "eslint": "^6.8.0",
        "eslint-config-airbnb-base": "^14.0.0",
        "eslint-config-node": "^4.0.0",
        "eslint-config-prettier": "^6.10.0",
        "eslint-plugin-import": "^2.20.1",
        "eslint-plugin-node": "^11.0.0",
        "eslint-plugin-prettier": "^3.1.2",
        "jest": "^25.1.0",
        "prettier": "^1.19.1",
        "rimraf": "^3.0.2",
        "ts-jest": "^25.2.0",
        "ts-node": "^8.6.2",
        "typescript": "^3.8.2"
    },
    "dependencies": {
        "esm": "^3.2.25",
        "minimist": "^1.2.5"
    }
}