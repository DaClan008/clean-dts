	"version": "0.2.0",
	"configurations": [
		{
			"name": "TS",
			"type": "node",
			"request": "launch",
			"args": ["${relativeFile}"],
			"runtimeArgs": ["--nolazy", "-r", "ts-node/register"],
			"sourceMaps": true,
			"cwd": "${workspaceRoot}",
			"protocol": "inspector",
			"skipFiles": ["${workspaceFolder}/node_modules/**/*.*", "<node_internals>/**/*.*"]
		},
		{
			"name": "JS",
			"type": "node",
			"request": "launch",
			"args": ["${relativeFile}"],
			"sourceMaps": true,
			"cwd": "${workspaceRoot}",
			"protocol": "inspector",
			"skipFiles": ["${workspaceFolder}/node_modules/**/*.*", "<node_internals>/**/*.*"]
		}
	]
}
